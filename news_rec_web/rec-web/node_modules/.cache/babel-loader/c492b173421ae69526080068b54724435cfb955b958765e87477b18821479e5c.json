 this.$store.commit('numChange', {item:'recList',path:to.path})\r\n      }\r\n      // 存储离开时的滚动条位置\r\n      this.scrollTop = document.documentElement.scrollTop\r\n      // next()必须要写，不写不会发生跳转\r\n      next();\r\n    },\r\n  }\r\n</script>\r\n\r\n<style scoped>\r\n  @import url('../assets/css/test.css');\r\n\r\n  .lists {\r\n    position: relative;\r\n    top: 70px;\r\n    padding: 0 10px;\r\n  }\r\n\r\n  .title {\r\n    font-size: 1.2rem;\r\n    color: black;\r\n    font-weight: bolder;\r\n  }\r\n\r\n  .cate {\r\n    font-size: 1rem;\r\n    color: #00F;\r\n    margin-right: .5rem;\r\n    padding: .08rem;\r\n    border: 1px solid #00F\r\n  }\r\n\r\n  .discribe {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    font-size: 1rem;\r\n    color: #918d8d;\r\n    padding-top: 12px;\r\n  }\r\n\r\n  .rec {\r\n    border-bottom: 2px solid #428bff\r\n  }\r\n\r\n  .recCont {\r\n    cursor: default;\r\n    color: #428bff;\r\n  }\r\n\r\n  .recPath {\r\n    fill: #428bff;\r\n  }\r\n</style>"],"mappings":";AA4DA,OAAAA,SAAA;AACA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,QAAA;MACAC,cAAA;MAAA;MACAC,QAAA;MAAA;MACAC,YAAA;MAAA;MACAC,SAAA;MACAC,SAAA;IACA;EACA;EACAC,UAAA;IACAT;EACA;EACAU,OAAA;IACAC,UAAA;MACAC,UAAA;QACA,KAAAJ,SAAA;QACA,KAAAK,MAAA,CAAAC,MAAA;QACA,KAAAC,OAAA;MACA;IACA;IACAA,QAAA;MACA,IAAAC,GAAA;MACA,SAAAH,MAAA,CAAAI,KAAA,CAAAC,IAAA;QACAF,GAAA,2CAAAH,MAAA,CAAAI,KAAA,CAAAE,IAAA,CAAAC,QAAA;MACA,gBAAAP,MAAA,CAAAI,KAAA,CAAAC,IAAA;QACAF,GAAA,2CAAAH,MAAA,CAAAI,KAAA,CAAAE,IAAA,CAAAC,QAAA,kBAAAP,MAAA,CAAAI,KAAA,CAAAE,IAAA,CAAAE,GAAA,qBAAAR,MAAA,CAAAI,KAAA,CAAAE,IAAA,CAAAG,MAAA;MACA;MAEA,KAAAC,KAAA,CAAAC,GAAA,CAAAR,GAAA,EAAAS,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAxB,IAAA,CAAAyB,IAAA;UACA,KAAAd,MAAA,CAAAI,KAAA,CAAAW,OAAA,CAAAC,IAAA,IAAAH,GAAA,CAAAxB,IAAA,CAAAA,IAAA;UACA,KAAAE,cAAA;QACA;MACA;IACA;IAEA;IACA;IACA0B,OAAA;MACA,KAAAf,OAAA;IACA;IACAgB,MAAA;MACA,KAAAC,OAAA,CAAAH,IAAA;IACA;IACAI,MAAA;MACA,KAAAD,OAAA,CAAAH,IAAA;IACA;EACA;EAEA;EACA;EACAK,UAAA;IACAC,QAAA,CAAAC,eAAA,CAAA7B,SA
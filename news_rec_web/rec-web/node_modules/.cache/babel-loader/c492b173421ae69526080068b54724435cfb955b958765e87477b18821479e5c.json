llTop = document.documentElement.scrollTop;\n    // next()必须要写，不写不会发生跳转\n    next();\n  }\n};","map":{"version":3,"names":["bottomBar","name","data","isActive","vanListLoading","finished","finishedText","scrollTop","isLoading","components","methods","onRefresh","setTimeout","$store","commit","getList","url","state","type","user","username","age","gender","axios","get","then","res","code","recList","push","onLoad","toRec","$router","toHot","activated","document","documentElement","beforeRouteLeave","to","from","next","item","path"],"sources":["src/components/recLists.vue"],"sourcesContent":["<template>\r\n  <div ref=\"content\">\r\n    <div class=\"tabs\" ref=\"tabs\">\r\n      <input type=\"radio\" id=\"tab1\" name=\"tab-control\" checked>\r\n      <input type=\"radio\" id=\"tab2\" name=\"tab-control\">\r\n      <ul>\r\n        <li title=\"Features\" class=\"rec\" @click=\"toRec\">\r\n          <label for=\"tab1\" role=\"button\" class=\"recCont\">\r\n            <svg viewBox=\"0 0 24 24\" class=\"recPath\">\r\n              <path d=\"M14,2A8,8 0 0,0 6,10A8,8 0 0,0 14,18A8,8 0 0,0 22,10H20C20,13.32 17.32,16 14,16A6,6 0 0,1 8,10A6,6 0 0,1 14,4C14.43,4 14.86,4.05 15.27,4.14L16.88,2.54C15.96,2.18 15,2 14,2M20.59,3.58L14,10.17L11.62,7.79L10.21,9.21L14,13L22,5M4.93,5.82C3.08,7.34 2,9.61 2,12A8,8 0 0,0 10,20C10.64,20 11.27,19.92 11.88,19.77C10.12,19.38 8.5,18.5 7.17,17.29C5.22,16.25 4,14.21 4,12C4,11.7 4.03,11.41 4.07,11.11C4.03,10.74 4,10.37 4,10C4,8.56 4.32,7.13 4.93,5.82Z\" />\r\n            </svg>\r\n            <br>\r\n            <span>推荐</span>\r\n          </label>\r\n        </li>\r\n        <li title=\"Delivery Contents\" @click=\"toHot\">\r\n          <label for=\"tab2\" role=\"button\">\r\n            <svg viewBox=\"0 0 24 24\">\r\n              <path d=\"M2,10.96C1.5,10.68 1.35,10.07 1.63,9.59L3.13,7C3.24,6.8 3.41,6.66 3.6,6.58L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.66,6.72 20.82,6.88 20.91,7.08L22.36,9.6C22.64,10.08 22